<div class="card">
  <% if header %>
<%= image_pack_tag "icon-doc-black.svg", alt: "icon containing learning materials" %>
  <h3 class="card__header">
    <%= truncated_header %>
  </h3>
  <% end %>

  <% if title %>
  <h3>
    <%= title %>
  </h3>
  <% end %>

  <div class="card__snippet">
    <p><%= snippet %><p>
  </div>

  <footer class="card__footer">
    <%= link_to(link, class: "git-link") do %>
      <%= link_text %> <%= helpers.fas_icon("chevron-right") %>
    <% end %>
  </footer>
</div>
